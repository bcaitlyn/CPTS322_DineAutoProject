@page
@model DineAuto.Pages.ReviewSystem.ReviewRestaurantModel
@{
    ViewData["Title"] = "Review Restaurant";
}

<div class="container mt-4">
    <h2 class="display-5">Review @Model.RestaurantName</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <form method="post" class="mt-3">
        <div class="mb-3">
            <label for="rating" class="form-label">Rating (1â€“5)</label>
            <input type="number" name="Rating" min="1" max="5" required class="form-control" />
        </div>
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="Comment" class="form-control" rows="4"></textarea>
        </div>
        <input type="hidden" name="City" value="@Model.City" />
        <input type="hidden" name="RestaurantName" value="@Model.RestaurantName" />
        <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
</div>