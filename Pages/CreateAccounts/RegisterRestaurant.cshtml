@page
@model DineAuto.Pages.CreateAccounts.RegisterRestaurantModel
@{
    ViewData["Title"] = "Register Restaurant";
}

<div class="container mt-4">
    <h2 class="display-4">Register Restaurant</h2>

    <form method="post" class="w-50">
        <div class="mb-3 text-start">
            <label for="RestaurantName" class="form-label">Restaurant Name</label>
            <input type="text" id="RestaurantName" name="RestaurantName" class="form-control" style="max-width: 600px;" required>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success mt-3">@Model.Message</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>
