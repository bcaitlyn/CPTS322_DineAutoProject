@page
@model DineAuto.Pages.ReviewSystem.ViewRestaurantReviewsModel
@{
    ViewData["Title"] = "Restaurant Reviews";
}

<h2 class="display-5">Reviews for @Model.RestaurantName</h2>

@if (Model.Reviews.Count == 0)
{
    <p>No reviews have been submitted for this restaurant yet.</p>
}
else
{
    foreach (var review in Model.Reviews)
    {
        <div class="border rounded p-3 mb-3">
            <p><strong>User:</strong> @review.Username</p>
            <p><strong>Rating:</strong> @review.Rating / 5</p>
            <p><strong>Comment:</strong> @review.Comment</p>
        </div>
    }
}