@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login with your DineAuto username and password:</h2>
<form method="post" class="mx-auto" style="max-width: 50%; text-align: left;">
    <div class="mb-3">
        <label class="form-label">I am a</label>
        <div class="form-check">
            <input type="radio" id="customer" name="UserRole" value="Customer" class="form-check-input" required>
            <label for="customer" class="form-check-label">Customer</label>
        </div>
        <div class="form-check">
            <input type="radio" id="owner" name="UserRole" value="Owner" class="form-check-input" required>
            <label for="owner" class="form-check-label">Owner</label>
        </div>
        <div class="form-check">
            <input type="radio" id="admin" name="UserRole" value="Admin" class="form-check-input" required>
            <label for="admin" class="form-check-label">Admin</label>
        </div>
    </div>

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" id="username" name="Username" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="Password" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
</form>